<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <FactionDef ParentName="SMercs_FactionDef_Base">
    <defName>SMercs_FactionDef_OMC</defName>
    <label>Outlander mercenary company</label>
    <description>A mercenary company consisting of outlanders, tribals, thieves, cutthroats, deserters, and pirates willing to fight anyone for the right price.\n\nThey use a chaotic collection of common weaponry, purchased from anyone willing to sell to them, or more likely looted from the dead.</description>
    <pawnSingular>Outlander merc</pawnSingular>
    <pawnsPlural>Outlander mercs</pawnsPlural>
    <leaderTitle>First-captain</leaderTitle>
    <fixedLeaderKinds>
      <li>SMercs_PawnKindDef_OMC_Elite</li>
    </fixedLeaderKinds>

    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <factionIconPath>World/WorldObjects/Expanding/TownRough</factionIconPath>
    <factionNameMaker>NamerFactionPirate</factionNameMaker>
    <settlementNameMaker>NamerSettlementPirate</settlementNameMaker>
    <colorSpectrum>
      <li>(0.85, 0, 0)</li>
    </colorSpectrum>

    <techLevel>Spacer</techLevel>
    <allowedCultures>
      <li>Kriminul</li>
      <li>Corunan</li>
      <li>Rustican</li>
    </allowedCultures>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
    </requiredMemes>
    <structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
    </structureMemeWeights>
    <xenotypeSet>
      <xenotypeChances>
        <Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0.1</Dirtmole>
        <Hussar MayRequire="Ludeon.RimWorld.Biotech">0.05</Hussar>
        <Waster MayRequire="Ludeon.RimWorld.Biotech">0.025</Waster>
        <Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.025</Pigskin>
        <Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
        <Impid MayRequire="Ludeon.RimWorld.Biotech">0.025</Impid>
        <Genie MayRequire="Ludeon.RimWorld.Biotech">0.025</Genie>
        <Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.025</Yttakin>
        <Starjack MayRequire="Ludeon.RimWorld.Biotech,Ludeon.RimWorld.Odyssey">0.025</Starjack>
      </xenotypeChances>
    </xenotypeSet>
    <backstoryFilters>
      <li>
        <categories>
          <li>Pirate</li>
          <li>Outlander</li>
          <li>Tribal</li>
        </categories>
      </li>
    </backstoryFilters>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <SMercs_PawnKindDef_OMC_Grenadier_Destructive>2</SMercs_PawnKindDef_OMC_Grenadier_Destructive>
          <SMercs_PawnKindDef_OMC_Gunner>10</SMercs_PawnKindDef_OMC_Gunner>
          <SMercs_PawnKindDef_OMC_Heavy>6</SMercs_PawnKindDef_OMC_Heavy>
          <SMercs_PawnKindDef_OMC_Sniper>7</SMercs_PawnKindDef_OMC_Sniper>
          <SMercs_PawnKindDef_OMC_Elite>10</SMercs_PawnKindDef_OMC_Elite>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
</Defs>